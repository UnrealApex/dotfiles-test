#!/bin/sh

# upload a file to 0x0.st
if [ $# = 1 ]; then
  curl -F"file=@$1" https://0x0.st
elif [ $# -gt 1 ]; then
  echo "files being uploaded: $*"
  for i in $(seq 5 -1 1); do
    printf "%b" "uploading files in $i \r"
    sleep 1
  done
  for file in "$@"; do
      curl -F"file=@$file" https://0x0.st
  done
else
  echo "Invalid file arguments provided

Usage: upload [FILE]...
" >&2
  exit 1
fi
