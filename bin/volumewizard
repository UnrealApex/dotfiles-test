#!/bin/bash


volume=$(pamixer --get-volume)

case $1 in
up)
        # Set the volume on (if it was muted)
        pamixer -u
        pamixer -i 2 --allow-boost
        herbe "volume: $volume%"

        ;;
down)
        pamixer -u
        pamixer -d 2 --allow-boost
        herbe "volume: $volume%"
        ;;
mute)
        pamixer -t
        if eval "$(pamixer --get-mute)"; then
                herbe "muted"
        else
                send_notification up
        fi
        ;;
esac
