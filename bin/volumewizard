#!/bin/bash

send_notification() {
  volume=$(pamixer --get-volume)
  pkill -SIGUSR1 herbe
  if eval "$(pamixer --get-mute)"; then
    herbe "volume: muted"
  else
    herbe "volume: $volume%"
  fi
}

case $1 in
up)
  # Set the volume on (if it was muted)
  pamixer -u
  pamixer -i 2 --allow-boost

  ;;
down)
  pamixer -u
  pamixer -d 2 --allow-boost
  ;;
mute)
  pamixer -t
  ;;
esac

send_notification
