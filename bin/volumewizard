#!/bin/bash

send_notification() {
  volume=$(pamixer --get-volume)
  if eval "$(pamixer --get-mute)"; then
    dunstify --replace 9993 "volume: muted"
  else
    dunstify --replace 9993 "volume: $volume%"
  fi
}

case $1 in
up)
  # Set the volume on (if it was muted)
  pamixer --umute
  pamixer --increase 2

  ;;
down)
  pamixer --unmute
  pamixer --decrease 2
  ;;
mute)
  pamixer --toggle-mute
  ;;
esac

send_notification
