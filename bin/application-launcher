#!/bin/bash

# paths where desktop entries are located
entry_locations=(~/.local/share/applications/ /usr/share/applications/)

# TODO: perhaps get application name directly from the desktop entry
# TODO: sort by application popularity

# get application names
applications=$(find "${entry_locations[@]}" \( -type f -o -type l \) -name "*.desktop" -exec basename {} .desktop \;)

# TODO: maybe change up nb and nf colors
gtk-launch "$(echo "$applications" | dmenu -fn SFMono\ Nerd\ Font\ Mono-10 -nb '#000000' -sf '#e3e4e7' -sb '#bf4e6d' -nf '#e3e4e7')"
