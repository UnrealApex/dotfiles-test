set previewer ~/.config/lf/scope
set cleaner ~/.config/lf/cleaner
set shellopts '-eu'
set ifs "\n"
set icons
set hiddenfiles ".*:*.aux:*.log:*.bbl:*.bcf:*.blg:*.run.xml"
set ignorecase true
set scrolloff 10
set autoquit true

map d delete
map . set hidden!
map ~ cd ~
map - jump-prev


