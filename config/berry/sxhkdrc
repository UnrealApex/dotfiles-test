#
# wm independent hotkeys
#

# terminal emulator
super + Return
        kitty

# program launcher
alt + @space
        rofi -show drun
# make sxhkd reload its configuration files:
super + Escape
        pkill -USR1 -x sxhkd

#
# berry hotkeys
#

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9, 0}
    berryc switch_workspace {0-9,0}

super + shift + {1-9, 0}
    berryc send_to_workspace {0-9,0}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super +  p
    berryc snap_right

super + o
    berryc snap_left

super + n
    berryc toggle_decorations

alt + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus

{_,shift + }Print
        screenshot {selection,full}

super + @period
        rofi -modi emoji -show emoji -kb-custom-1 Ctrl+c

super + shift + x
        betterlockscreen --lock

XF86Audio{Raise,Lower}Volume
        volumewizard {up,down}

XF86AudioMute
        volumewizard mute

XF86Audio{Play,Next,Prev}
  playerctl {play-pause,next,previous}

XF86MonBrightness{Up,Down}
  brightnessctl set {+15%,15%-}

XF86AudioMicMute
  pactl set-source-mute toggle

XF86Search
  rofi -show drun
