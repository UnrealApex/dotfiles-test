[user]
 # These values are set in ~/.config/git/config.local
[include]
 path = ~/.config/git/config.local
[credential]
 credentialStore = cache
[core]
 editor = nvim
 pager = 'less'
[pull]
 rebase = false
[interactive]
 diffFilter = 'diff-highlight | less'
[merge]
 conflictstyle = diff3
[diff]
 colorMoved = default
[push]
 autoSetupRemote = true
[gpg]
 format = ssh
[commit]
 gpgsign = true
[tag]
 gpgsign = true
[alias]
 ci = commit
 st = status
 co = checkout
 br = branch
 di = diff
 up = pull
 undo=reset --soft HEAD^
 s = !git rev-list --all | xargs git grep -F
	l = log -1 HEAD --stat
 diff = diff --color-words

